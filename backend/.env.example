# =================================================================
# ARCHIVO .env PARA BACKEND (Django)
# =================================================================
# Ubicación: /backend/.env
# 
# IMPORTANTE: 
# - Este archivo debe estar en la carpeta del backend (backend)
# - Nunca subir este archivo a Git (ya está en .gitignore)
# - Copiar este archivo como .env y ajustar valores según tu entorno
# =================================================================

# =================================================================
# CONFIGURACIÓN GENERAL DE DJANGO
# =================================================================

# Clave secreta de Django - CAMBIAR EN PRODUCCIÓN
# Generar una nueva con: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY='django-insecure-your-secret-key-here-change-this-in-production'

# Modo debug - Solo TRUE en desarrollo local
DEBUG=True

# Hosts permitidos - En producción especificar dominios exactos
# Ejemplos: localhost,127.0.0.1,tudominio.com
ALLOWED_HOSTS=*

# =================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =================================================================

# Por defecto usa SQLite (está configurado en settings.py)
# Para PostgreSQL, descomentar y configurar:
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=curiosmaze_db
DATABASE_USER=curiosmaze
DATABASE_PASSWORD=curiosmaze
DATABASE_HOST=localhost
DATABASE_PORT=5432

# =================================================================
# CONFIGURACIÓN DE CORS (Cross-Origin Resource Sharing)
# =================================================================

# Orígenes permitidos para CORS (frontend)
# En desarrollo: http://localhost:5173 (Vite default)
# En producción: https://tudominio.com
BACKEND_CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# Orígenes confiables para CSRF
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# =================================================================
# CONFIGURACIÓN DE JUDGE0 API
# =================================================================

# URL base de Judge0 API
# Local con Docker: http://localhost:2358
# Remoto: https://judge0-api.tudominio.com
JUDGE0_API_URL=http://192.168.1.80:2358

# Token de autenticación para Judge0 (opcional)
# Si tu instancia de Judge0 requiere autenticación, agregar aquí
JUDGE0_AUTH_TOKEN=

# Configuración de workers y timeouts
JUDGE0_MAX_WORKERS=5
JUDGE0_TIMEOUT=10

# =================================================================
# LÍMITES DE EJECUCIÓN PARA JUDGE0
# =================================================================

# Tiempo máximo de CPU en segundos
CPU_TIME_LIMIT=2.0

# Tiempo extra de CPU en segundos
CPU_EXTRA_TIME=0.5

# Tiempo máximo de ejecución total en segundos
WALL_TIME_LIMIT=5.0

# Límite de memoria en KB (128MB por defecto)
MEMORY_LIMIT=128000

# =================================================================
# CONFIGURACIÓN DE ARCHIVOS ESTÁTICOS Y MEDIA
# =================================================================

# URL base para archivos estáticos
STATIC_URL=/static/

# Directorio para archivos estáticos recolectados
STATIC_ROOT=staticfiles/

# URL base para archivos media (uploads)
MEDIA_URL=/media/

# Directorio para archivos media
MEDIA_ROOT=media/

# =================================================================
# CONFIGURACIÓN DE EMAIL (para recuperación de contraseñas)
# =================================================================

# Backend de email - Para desarrollo usar console
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Para producción con SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=tu_email@gmail.com
# EMAIL_HOST_PASSWORD=tu_password_de_aplicacion

# =================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =================================================================

# Configuración de cookies de sesión
SESSION_COOKIE_SECURE=False  # True en producción con HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Configuración de cookies CSRF
CSRF_COOKIE_SECURE=False  # True en producción con HTTPS
CSRF_COOKIE_HTTPONLY=False
CSRF_COOKIE_SAMESITE=Lax

# =================================================================
# CONFIGURACIÓN DE LOGGING
# =================================================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Directorio para logs
LOG_DIR=logs/

# =================================================================
# CONFIGURACIÓN DE CACHE
# =================================================================

# Backend de cache (por defecto usa memoria local)
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache

# Para Redis (recomendado en producción):
# CACHE_BACKEND=django_redis.cache.RedisCache
# REDIS_URL=redis://127.0.0.1:6379/1

# =================================================================
# OTRAS CONFIGURACIONES
# =================================================================

# Zona horaria
TIME_ZONE=America/Guayaquil

# Idioma por defecto
LANGUAGE_CODE=es-es

# Tamaño máximo de upload en MB
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880  # 5MB

# =================================================================
# CONFIGURACIÓN PARA DESARROLLO LOCAL
# =================================================================

# Puerto del servidor de desarrollo (por defecto 8000)
# Usar con: python manage.py runserver 0.0.0.0:$PORT
PORT=8000
#
# =================================================================