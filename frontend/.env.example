# =================================================================
# ARCHIVO .env PARA FRONTEND (Vue.js con Vite)
# =================================================================
# Ubicación: /frontend/.env
# 
# IMPORTANTE: 
# - Este archivo debe estar en la carpeta del frontend
# - Las variables deben comenzar con VITE_ para ser accesibles
# - Nunca subir este archivo a Git (ya está en .gitignore)
# - Copiar este archivo como .env y ajustar valores según tu entorno
# =================================================================

# =================================================================
# CONFIGURACIÓN DE API BACKEND
# =================================================================

# URL base del API backend de Django
# Local: http://localhost:8000/api
# Producción: https://api.tudominio.com/api
VITE_API_URL=http://localhost:8000/api

# Timeout para peticiones al backend (en milisegundos)
VITE_API_TIMEOUT=30000

# =================================================================
# CONFIGURACIÓN DE JUDGE0 API
# =================================================================

# URL base de Judge0 API
# Local con Docker: http://localhost:2358
# Remoto: https://judge0-api.tudominio.com
VITE_JUDGE0_API_URL=http://192.168.1.80:2358

# Timeout para peticiones a Judge0 (en milisegundos)
# Judge0 puede tardar en procesar código, usar timeout alto
VITE_JUDGE0_TIMEOUT=30000

# =================================================================
# LÍMITES DE EJECUCIÓN PARA JUDGE0 (desde frontend)
# =================================================================

# Tiempo máximo de CPU en segundos
VITE_CPU_TIME_LIMIT=2

# Tiempo extra de CPU en segundos
VITE_CPU_EXTRA_TIME=0.5

# Tiempo máximo de ejecución total en segundos
VITE_WALL_TIME_LIMIT=5

# Límite de memoria en KB (128MB por defecto)
VITE_MEMORY_LIMIT=128000

# =================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =================================================================

# Nombre de la aplicación
VITE_APP_TITLE=CURIOSMAZE

# Versión de la aplicación
VITE_APP_VERSION=0.5.1

# Ambiente de ejecución (development, staging, production)
VITE_APP_ENV=development

# =================================================================
# CONFIGURACIÓN DE CARACTERÍSTICAS
# =================================================================

# Habilitar selector de lenguaje en evaluaciones
VITE_LANGUAGE_SELECTOR_ENABLED=false

# ID de lenguaje por defecto para Judge0 (71 = Python 3)
VITE_DEFAULT_LANGUAGE_ID=71

# Mostrar overlay de desarrollo
VITE_SHOW_DEV_OVERLAY=true

# Habilitar modo debug en consola
VITE_DEBUG_MODE=true

# =================================================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# =================================================================

# Duración del token de acceso (en minutos)
VITE_ACCESS_TOKEN_LIFETIME=480  # 8 horas

# Duración del token de refresco (en días)
VITE_REFRESH_TOKEN_LIFETIME=7

# Clave para almacenamiento local
VITE_STORAGE_KEY_PREFIX=curiosmaze_

# =================================================================
# CONFIGURACIÓN DE UI/UX
# =================================================================

# Tema por defecto (light, dark, auto)
VITE_DEFAULT_THEME=dark

# Animaciones habilitadas
VITE_ENABLE_ANIMATIONS=true

# Tiempo de notificaciones (en milisegundos)
VITE_NOTIFICATION_DURATION=4000

# Número máximo de intentos de reconexión
VITE_MAX_RETRY_ATTEMPTS=3

# =================================================================
# CONFIGURACIÓN DE EDITOR DE CÓDIGO
# =================================================================

# Tema del editor (monokai, github, tomorrow, etc.)
VITE_EDITOR_THEME=monokai

# Tamaño de fuente del editor
VITE_EDITOR_FONT_SIZE=14

# Mostrar números de línea
VITE_EDITOR_LINE_NUMBERS=true

# Habilitar autocompletado
VITE_EDITOR_AUTOCOMPLETE=true

# =================================================================
# CONFIGURACIÓN DE EVALUACIONES
# =================================================================

# Tiempo máximo por evaluación (en minutos)
VITE_MAX_EVALUATION_TIME=120

# Permitir pausar evaluaciones
VITE_ALLOW_PAUSE_EVALUATION=false

# Mostrar resultados inmediatamente
VITE_SHOW_IMMEDIATE_RESULTS=true

# Guardar progreso automáticamente (en segundos)
VITE_AUTOSAVE_INTERVAL=30

# =================================================================
# CONFIGURACIÓN DE ANALÍTICAS (opcional)
# =================================================================

# Google Analytics ID
VITE_GA_TRACKING_ID=

# Sentry DSN para reporte de errores
VITE_SENTRY_DSN=

# =================================================================
# URLs DE RECURSOS EXTERNOS
# =================================================================

# URL del formulario de ayuda
VITE_HELP_FORM_URL=https://forms.google.com/your-help-form

# URL de documentación
VITE_DOCS_URL=https://docs.curiosmaze.com

# URL de términos y condiciones
VITE_TERMS_URL=/terms

# URL de política de privacidad
VITE_PRIVACY_URL=/privacy

# =================================================================
# CONFIGURACIÓN PARA DESARROLLO
# =================================================================

# Puerto del servidor de desarrollo (Vite)
VITE_PORT=5173

# Host del servidor de desarrollo
VITE_HOST=localhost

# Abrir navegador automáticamente
VITE_OPEN_BROWSER=true

# =================================================================
# CONFIGURACIÓN DE WEBSOCKETS (si se implementa)
# =================================================================

# URL del servidor WebSocket
# VITE_WS_URL=ws://localhost:8000/ws

# Reconexión automática de WebSocket
# VITE_WS_AUTO_RECONNECT=true

# =================================================================
# CONFIGURACIÓN DE ARCHIVOS
# =================================================================

# Tamaño máximo de archivo para upload (en MB)
VITE_MAX_FILE_SIZE=10

# Tipos de archivo permitidos para código
VITE_ALLOWED_CODE_EXTENSIONS=.py,.js,.java,.c,.cpp

# =================================================================
# RUTAS DE LA APLICACIÓN
# =================================================================

# Ruta base de la aplicación (útil si está en subdirectorio)
VITE_BASE_URL=/

# Rutas públicas (no requieren autenticación)
VITE_PUBLIC_ROUTES=/,/login,/evaluacion/acceso

# =================================================================
# MENSAJES Y TEXTOS PERSONALIZABLES
# =================================================================

# Mensaje de bienvenida
VITE_WELCOME_MESSAGE=¡CURIOSMAZE!

# Mensaje de mantenimiento
VITE_MAINTENANCE_MESSAGE=El sistema está en mantenimiento. Por favor, intenta más tarde.

# =================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =================================================================

# Habilitar Content Security Policy
VITE_ENABLE_CSP=false

# Dominios permitidos para recursos externos
VITE_ALLOWED_DOMAINS=localhost,*.curiosmaze.com

# =================================================================
# NOTAS DE USO:
# =================================================================
# 
# 1. INSTALACIÓN LOCAL:
#    - Copiar este archivo como .env en la carpeta frontend
#    - Ajustar URLs según tu configuración local
#    - Instalar dependencias: npm install
#    - Ejecutar en desarrollo: npm run dev
#    - Construir para producción: npm run build
#
# 2. VARIABLES EN EL CÓDIGO:
#    Acceder a las variables con: import.meta.env.VITE_NOMBRE_VARIABLE
#    Ejemplo: const apiUrl = import.meta.env.VITE_API_URL
#
# 3. DESARROLLO:
#    - Backend en http://localhost:8000
#    - Frontend en http://localhost:5173
#    - Judge0 en http://localhost:2358
#
# 4. PRODUCCIÓN:
#    - Actualizar todas las URLs a dominios reales con HTTPS
#    - Deshabilitar VITE_DEBUG_MODE
#    - Configurar VITE_APP_ENV=production
#    - Considerar usar variables de entorno del servidor
#
# 5. JUDGE0 FRONTEND:
#    El frontend puede conectarse directamente a Judge0
#    para operaciones en tiempo real si es necesario
#
# 6. SEGURIDAD:
#    - No incluir claves secretas o tokens sensibles
#    - Las variables VITE_* son visibles en el código compilado
#    - Para datos sensibles, usar solo el backend
# =================================================================